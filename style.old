/* Global Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Arial, sans-serif;
}

/* Navigation Bar Styles */
header#navbar {
    background-color: #d4d4d4d1;
    color: rgb(64, 64, 64);
    padding: 15px 20px;
    text-align: center;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

header#navbar .logo {
    font-size: 24px;
    font-weight: bold;
}

header#navbar nav a {
    color: rgb(49, 49, 49);
    margin: 0 10px;
    text-decoration: none;
    font-size: 16px;
}

/* Header Section Styles */
section#header {
    text-align: center;
    margin-bottom: 40px;
}

section#header img {
    width: 100%;
    height: auto;
}

/* Footer Styles */
footer#footer {
    background-color: #333;
    color: white;
    text-align: center;
    padding: 10px 0;
    margin-top: 40px;
}

/* Contact Section Styles */
section#contact {
    background-color: #f0f0f0;
    padding: 20px;
    border-radius: 8px;
}

h1, h2 {
    color: #007acc;
    margin-bottom: 20px;
}

p {
    margin-bottom: 20px;
    line-height: 1.6;
}

input[type="text"],
input[type="email"],
textarea {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #ccc;
    border-radius: 4px;
}

input[type="submit"] {
    background-color: #007acc;
    color: white;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    border-radius: 4px;
}

/* Section Styles */
.section {
    margin: auto;
    padding: 20px;
    margin-bottom: 40px;
    max-width: 800px;
}

.intro-text {
    width: 50%;
    float: right;
    padding: 20px;
}

.intro-image {
    width: 50%;
    float: left;
}

.intro-image img {
    width: 100%;
    height: auto;
}

.form-group {
    margin-bottom: 20px;
}

.clearfix::after {
    content: "";
    display: table;
    clear: both;
}
